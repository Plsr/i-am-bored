<h2><a href="<%= @media_resource.url %>"><%= @media_resource.name %></a></h2>
<p><%= @media_resource.description %></p>
<ul>
  <% @media_resource.fields.each do |field| %>
    <li><%= field %></li>
  <% end %>
</ul>
<span>Added at <%= @media_resource.created_at %></span>
<% if @media_resource.unconsumed %>
  <span>Unread</span>
<% end %>
